extends layoutAdmin

block content

    h2 Cette page vous permet de modifier, supprimer et ajouter un produit.  
    ul.pager.col-lg-12
      li.previous
        a(href='./logged')
          span.glyphicon.glyphicon-backward
          |  Accueil
    br 
    br
    br
    a(href="/admin/produits/ajouter" class="btn btn-info") Ajouter un produit 
    br
    br
    br
    table.table.table-striped.table-bordered
        tr
            th #
            th Catégorie
            th Nom du produit
            th Description
            th Composition
            th Quantité
            th Poids
            th Photo
            th
            th
            th
        each product in products
            tr
                td=product.id
                td=product.category
                td=product.name
                td=product.description
                td=product.composition
                td=product.quantity
                td=product.weight 
                td
                    img(src="/images/" + product.image height="50")
                td
                    a(href="/admin/produits/modifier/" + product.id class="btn btn-info") Modifier
                td
                    a(href="/admin/produits/supprimer/" + product.id onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce produit ?');" class="btn btn-warning") Supprimer